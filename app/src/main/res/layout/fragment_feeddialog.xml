<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99232323"
    tools:context=".FeeddialogFragment">

    <LinearLayout
        android:id="@+id/destroy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/contents_box">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nsb"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#333333"
                    android:layout_marginTop="20dp"
                    android:text="먹이주기">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:lottie_fileName="heart.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"/>
                <TextView
                    android:id="@+id/situation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ns"
                    android:textColor="#6E6E6E"
                    android:textSize="13dp"
                    android:text="앵무가 밥을 맛있게 먹었습니다 !">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_play"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/okay_button"
                    android:fontFamily="@font/nsb"
                    android:text="확인"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>