<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeeddialogFragment">

    <LinearLayout
        android:id="@+id/destroy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/contents_box">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="3">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:lottie_fileName="heart.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nsb"
                    android:textColor="#6E6E6E"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:text="앵무가 밥을 맛있게 먹었습니다 !">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/okay_button"
                    android:fontFamily="@font/nsed"
                    android:text="확인"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>