<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/playactivity"

    tools:context=".PlayActivity">
    
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/infospace"
        android:layout_marginEnd="16dp"
        android:layout_gravity="bottom"
        android:id="@+id/ani1">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        android:gravity="right"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:src="@drawable/setting_buton">
            </ImageView>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:src="@drawable/list_buton"
                android:id="@+id/account">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.53"
        app:layout_constraintBottom_toTopOf="@id/end"
        android:id="@+id/infospace">
    </FrameLayout>


    <LinearLayout
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        android:orientation="vertical"
        android:background="#BDBDBD"
        app:layout_constraintBottom_toBottomOf="parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/contents_box3">


            <LinearLayout
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/statusimg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/underbar_parrot1"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="11dp"
                    android:fontFamily="@font/nsb"
                    android:text="상태보기"></TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/feedimg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/underbar_food1"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="11dp"
                    android:fontFamily="@font/nsb"
                    android:text="먹이주기"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/underbar_parrot"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="11dp"
                    android:fontFamily="@font/nsb"
                    android:text="상태보기"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/conver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/converimg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/underbar_conver1"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="11dp"
                    android:fontFamily="@font/nsb"
                    android:text="대화하기"></TextView>
            </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>