<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444"
    tools:context=".DrawFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/backarrow1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nsed"
                android:textSize="14dp"
                android:textColor="#fff"
                android:text="이 사물들중에 하나를 골라서 그려 보세요">
            </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@drawable/contents_box"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nsb"
                    android:textColor="#777"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:text="자전거">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nsb"
                    android:textColor="#777"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:text="자동차">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nsb"
                    android:textColor="#777"
                    android:layout_marginRight="10dp"
                    android:textSize="13dp"
                    android:text="기차">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nsb"
                    android:textColor="#777"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:text="오토바이">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nsb"
                    android:textColor="#777"
                    android:textSize="13dp"
                    android:text="요트">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="#fff">


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#ffb830">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nsb"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="보여주기">
        </TextView>

    </FrameLayout>

</FrameLayout>