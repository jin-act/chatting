<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feed">


    <LinearLayout
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/second_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:background="@drawable/contents_box"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nsed"
                android:text="먹이주기"
                android:layout_marginTop="30dp"
                android:textColor="#4A4A4A"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="40dp">
            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/food">
                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:fontFamily="@font/nsed"
                        android:text="좋아하는 음식"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:textColor="#4A4A4A"
                        android:textSize="14dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:fontFamily="@font/nsb"
                        android:text="앵무가 좋아하는 음식을 줘보세요"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:textColor="#787878"
                        android:textSize="13dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/scrollview">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/contents_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="햄버거"
                            android:fontFamily="@font/nsed"
                            android:layout_marginLeft="14dp"
                            android:layout_gravity="center"
                            android:textColor="#676767"
                            android:textSize="13dp"
                            />

                        <CheckBox
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="35dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/hambuger"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/contents_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="햄버거"
                            android:fontFamily="@font/nsed"
                            android:layout_marginLeft="14dp"
                            android:layout_gravity="center"
                            android:textColor="#676767"
                            android:textSize="13dp"
                            />

                        <CheckBox
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="35dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/hambuger"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/contents_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="햄버거"
                            android:fontFamily="@font/nsed"
                            android:layout_marginLeft="14dp"
                            android:layout_gravity="center"
                            android:textColor="#676767"
                            android:textSize="13dp"
                            />

                        <CheckBox
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="35dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/hambuger"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/contents_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="햄버거"
                            android:fontFamily="@font/nsed"
                            android:layout_marginLeft="14dp"
                            android:layout_gravity="center"
                            android:textColor="#676767"
                            android:textSize="13dp"
                            />

                        <CheckBox
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="35dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/hambuger"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/contents_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="햄버거"
                            android:fontFamily="@font/nsed"
                            android:layout_marginLeft="14dp"
                            android:layout_gravity="center"
                            android:textColor="#676767"
                            android:textSize="13dp"
                            />

                        <CheckBox
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="35dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/hambuger"/>
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nsb"
            android:textColor="#FFFFFF"
            android:text="확인"
            android:background="@drawable/okay_button">

        </Button>
    </LinearLayout>

</FrameLayout>