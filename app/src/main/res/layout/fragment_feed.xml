<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feed">


    <LinearLayout
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/second_background">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/food"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:background="@drawable/contents_box">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/food" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nsb"
                        android:layout_gravity="center"
                        android:text="먹이주기"
                        android:textColor="#4A4A4A"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#DCDCDC"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nsel"
                    android:text="좋아하는 음식을 물어보고 음식을 줘보세요"
                    android:textColor="#676767"
                    android:textSize="11dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"/>

            </LinearLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/food"
            android:id="@+id/scrollview">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/contents_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nsb"
                            android:text="햄버거"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="center"
                            android:textColor="#676767"
                            android:textSize="12dp"
                            />

                        <CheckBox
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="13dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="27dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/hambuger"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/contents_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nsb"
                            android:text="햄버거"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="center"
                            android:textColor="#676767"
                            android:textSize="12dp"
                            />

                        <CheckBox
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="13dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/hambuger"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/contents_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nsb"
                            android:text="햄버거"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="center"
                            android:textColor="#676767"
                            android:textSize="12dp"
                            />

                        <CheckBox
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="13dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/hambuger"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/contents_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nsb"
                            android:text="햄버거"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="center"
                            android:textColor="#676767"
                            android:textSize="12dp"
                            />

                        <CheckBox
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="13dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/hambuger"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/contents_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nsb"
                            android:text="햄버거"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="center"
                            android:textColor="#676767"
                            android:textSize="12dp"
                            />

                        <CheckBox
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="13dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/hambuger"/>
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nsb"
            android:textColor="#FFFFFF"
            android:text="확인"
            android:background="@drawable/okay_button">

        </Button>
    </LinearLayout>

</FrameLayout>