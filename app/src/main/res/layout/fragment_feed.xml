<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivitys.feed">


    <LinearLayout
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/second_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/contents_box"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/nsed"
                android:text="먹이주기"
                android:textColor="#444"
                android:textSize="20dp"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/feed"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/nsed"
                        android:text="좋아하는 음식"
                        android:textColor="#444"
                        android:textSize="14dp"></TextView>

                    <TextView
                        android:id="@+id/text_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nsb"
                        android:text="앵무에게 좋아하는 음식을 물어보고 줘보세요"
                        android:textColor="#777"
                        android:textSize="13dp"></TextView>
                    <TextView
                        android:id="@+id/Feed_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:fontFamily="@font/nsb"
                        android:text=""
                        android:textColor="#FF3333"
                        android:textSize="13dp"></TextView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lay.1"
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/contents_box"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="14dp"
                            android:fontFamily="@font/nsb"
                            android:text="피자"
                            android:textColor="#676767"
                            android:textSize="13dp" />

                        <CheckBox
                            android:id="@+id/no.1"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_height="9dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"
                        android:gravity="right">

                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/pizza1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay.2"
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/contents_box"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="14dp"
                            android:fontFamily="@font/nsb"
                            android:text="햄버거"
                            android:textColor="#676767"
                            android:textSize="13dp" />

                        <CheckBox
                            android:id="@+id/no.2"
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="37dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/burger3" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay.3"
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/contents_box"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="14dp"
                            android:fontFamily="@font/nsb"
                            android:text="파스타"
                            android:textColor="#676767"
                            android:textSize="13dp" />

                        <CheckBox
                            android:id="@+id/no.3"
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="37dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/pasta" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay.4"
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/contents_box"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="14dp"
                            android:fontFamily="@font/nsb"
                            android:text="초밥"
                            android:textColor="#676767"
                            android:textSize="13dp" />

                        <CheckBox
                            android:id="@+id/no.4"
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="37dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/susi" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay.5"
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/contents_box"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="14dp"
                            android:fontFamily="@font/nsb"
                            android:text="김밥"
                            android:textColor="#676767"
                            android:textSize="13dp" />

                        <CheckBox
                            android:id="@+id/no.5"
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:background="@drawable/chekbox_background"
                            android:buttonTint="#003A3A3A" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="37dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/gimbob" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/okay_button"
            android:fontFamily="@font/nsb"
            android:visibility="gone"
            android:text="확인"
            android:textColor="#FFFFFF">
        </Button>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/btn_sel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#ffb830">

        <TextView
            android:id="@+id/btn_sel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nsb"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="먹이주기">
        </TextView>

    </FrameLayout>

</FrameLayout>