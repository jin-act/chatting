<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivitys.login">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
            <EditText
                android:id="@+id/et_id"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background2"
                android:hint="Username"
                android:padding="10dp"
                android:textColor="#515151"
                android:textColorHint="#A0A0A0"
                android:textSize="13dp"
                android:selectAllOnFocus="true"
                android:maxLength="12"
                android:singleLine = "true"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/et_pw"/>

            <EditText
                android:id="@+id/et_pw"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background2"
                android:hint="Password"
                android:padding="10dp"
                android:textColor="#515151"
                android:textColorHint="#A0A0A0"
                android:maxLength="12"
                android:textSize="13dp"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/tv_save"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/previous"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:checked="true"
                    android:background="@drawable/chekbox_background"
                    android:buttonTint="#003A3A3A" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ns"
                    android:layout_marginLeft="5dp"
                    android:text="이전 접속 아이디 저장하기"
                    android:textColor="#323232"
                    android:layout_gravity="center"
                    android:textSize="12dp" />
            </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/text_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ns"
                android:text=""
                android:textColor="#FF5722"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="220dp"
                android:layout_height="43dp"
                android:background="@drawable/okay_button"
                android:fontFamily="@font/nsed"
                android:text="확인"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nsel"
                android:text="비밀번호를 잊으셨나요?"
                android:textColor="#595959"
                android:textSize="12dp" />

        </LinearLayout>



</FrameLayout>