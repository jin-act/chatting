<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivitys.join">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp">
        <LinearLayout
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/contents_box3">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="아이디"
                        android:fontFamily="@font/nsb"
                        android:textColor="#777">
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_joinid"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#ff515151"
                            android:textSize="13dp"
                            android:background="@drawable/contents_box"/>


                        <Button
                            android:id="@+id/btn_ID"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="3"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="7dp"
                            android:background="@drawable/contents_box8"
                            android:fontFamily="@font/ns"
                            android:text="중복 확인"
                            android:textColor="#A0A0A0"
                            android:textSize="11dp" />

                    </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="13dp"
                            android:text="비밀번호"
                            android:fontFamily="@font/nsb"
                            android:textColor="#777">
                        </TextView>


                    <EditText
                        android:id="@+id/et_joinpw"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:textSize="13dp"
                        android:hint="   * 영문,숫자를 포함하는 8자리이상의 비밀번호"
                        android:textColorHint="#C8C8C8"
                        android:textColor="#ff515151"
                        android:background="@drawable/contents_box"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="13dp"
                        android:text="비밀번호 확인"
                        android:fontFamily="@font/nsb"
                        android:textColor="#777">
                    </TextView>

                    <EditText
                        android:id="@+id/et_pwcheck"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:textSize="13dp"
                        android:textColor="#ff515151"
                        android:background="@drawable/contents_box"
                        android:singleLine = "true"
                        android:inputType="textPassword"
                        android:maxLength="12"
                        android:imeOptions="actionDone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:layout_marginTop="15dp"
                        android:text="E-mail"
                        android:fontFamily="@font/nsb"
                        android:textColor="#777">
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:textSize="13dp"
                            android:textColor="#ff515151"
                            android:background="@drawable/contents_box"/>

                        <Button
                            android:id="@+id/btn_email"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="7dp"
                            android:layout_weight="3"
                            android:background="@drawable/contents_box8"
                            android:fontFamily="@font/ns"
                            android:text="인증 번호"
                            android:textColor="#A0A0A0"
                            android:textSize="11dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:layout_marginTop="15dp"
                        android:text="닉네임"
                        android:fontFamily="@font/nsb"
                        android:textColor="#777">
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/certification"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/contents_box"
                            android:textColor="#ff515151"
                            android:textSize="13dp" />


                    </LinearLayout>



                    <Button
                        android:id="@+id/btn_Join"
                        android:layout_width="220dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/okay_button"
                        android:fontFamily="@font/nsb"
                        android:text="가입하기"
                        android:layout_marginBottom="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>